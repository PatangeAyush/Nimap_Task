@model List<ProductDTO>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>

    <style>
        
        body {
            font-family: Arial;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        h2 {
            color: black;
            text-align: center;
        }

        .btn {
            padding: 8px 16px;
            margin: 10px;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            font-size: 14px;
        }

        .btn-primary {
            background-color: green;
        }

        .btn-secondary {
            background-color: blue;
        }

        .btn-danger {
            background-color: red;
        }

        .btn:hover {
            opacity: 0.8;
        }

        
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: green;
            color: white;
        }

        td {
            background-color: white;
        }

        tr:hover td {
            background-color: white;
        }

        td a {
            padding: 6px 12px;
            border-radius: 5px;
            text-decoration: none;
            color: white;
        }

            td a.update {
                background-color: blue;
            }

            td a.delete {
                background-color: red;
            }

            td a:hover {
                opacity: 0.8;
            }
    </style>
</head>
<body>

    <h2>Products List</h2>

    <div style="text-align: center;">
        <a href="/Product/AddProduct" class="btn btn-primary">Add Product</a>
    </div>

    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Category ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.ProductName</td>
                    <td>@product.CategoryID</td>
                    <td>
                        <a href="@Url.Action("UpdateProduct", "Product", new { id = product.ProductID })" class="update">Update</a>
                        <a href="@Url.Action("DeleteProduct", "Product", new { id = product.ProductID })" class="delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>
