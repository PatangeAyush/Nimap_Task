@model CategoryDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Category</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        h2 {
            color: #333;
            text-align: center;
        }

        .form-container {
            width: 50%;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .form-container div {
                margin-bottom: 15px;
            }

            .form-container button {
                padding: 12px 20px;
                background-color: #f44336;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
            }

                .form-container button:hover {
                    background-color: #d32f2f;
                }

        .cancel-btn {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #2196F3;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

            .cancel-btn:hover {
                background-color: #0b7dda;
            }
    </style>
</head>
<body>

    <h2>Are you sure you want to delete this product?</h2>

    <div class="form-container">
        <div>
            <strong>Category Name:</strong> @Model.CategoryName
        </div>
        <div>
            <strong>Category:</strong> @Model.CategoryID
        </div>

        @using (Html.BeginForm("DeleteCategory", "Category", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CategoryID) <!-- Hidden field for ProductID -->

            <button type="submit">Confirm Delete</button>
        }

        <a href="@Url.Action("GetProducts", "Product")" class="cancel-btn">Cancel</a>
    </div>

</body>
</html>
